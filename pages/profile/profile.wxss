.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: calc(96rpx + env(safe-area-inset-bottom) + 30rpx);
}

/* 功能列表样式 */
.function-list {
  padding: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 15rpx;
}

.function-group {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
}

.function-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.iconfont {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #666;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.icon-arrow-right {
  font-size: 32rpx;
  color: #999;
  margin-right: 0;
}

/* 版本号文本 */
.version {
  font-size: 26rpx;
  color: #999;
}

/* 客服按钮样式 */
.contact-button {
  width: 100%;
  padding: 0;
  background: transparent;
  border: none;
  border-radius: 0;
}

.contact-button::after {
  border: none;
}

/* 添加预警输入框样式 */
.warning-input {
  text-align: right;
  width: 200rpx;
  font-size: 26rpx;
  color: #333;
  padding: 4rpx 10rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
} 