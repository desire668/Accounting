.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.header {
  background: #fff;
  padding: 30rpx;
  text-align: center;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.date {
  font-size: 26rpx;
  color: #666;
}

.record-list {
  margin-top: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 2rpx;
}

.record-left {
  display: flex;
  align-items: center;
  width: 280rpx;
}

.iconfont {
  font-size: 40rpx;
  color: #666;
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.record-info {
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
}

.category {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.remark {
  font-size: 24rpx;
  color: #999;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 20rpx;
  flex-shrink: 0;
}

.date {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
  display: block;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
  min-width: 120rpx;
  text-align: right;
  flex-shrink: 0;
}

.amount.income {
  color: #07c160;
}

.amount.expense {
  color: #ff4d4f;
}

.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
